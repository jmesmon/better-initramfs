#!/bin/sh
name='lzo'
version='2.06'
sources=( "http://www.oberhumer.com/opensource/lzo/download/$name-$version.tar.gz" )
homepage='http://www.oberhumer.com/opensource/lzo/'
license='GPLv2'

build_cmd="
	cd /source/${name}-${version} && \
	./configure --prefix=/usr && \
	make -j ${cores_num:-1} && \
	make install
"

fetch_source
install_source
build_source
